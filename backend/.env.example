# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_anon_key_here
SUPABASE_SERVICE_KEY=your_service_role_key_here

# External APIs
WEATHERAPI_KEY=your_weatherapi_key
AQICN_API_TOKEN=your_aqicn_token

# PRIM (Île-de-France Mobilités) API
IDFM_API_KEY=your_idfm_api_key
IDFM_BASE_URL=https://prim.iledefrance-mobilites.fr/marketplace

# Application
APP_NAME=Smart City Platform
DEBUG=True

# Security
SECRET_KEY=your-super-secret-key-change-me-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Environment
ENVIRONMENT=development

# CORS
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# SMTP (for alerts - configure later)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
ALERT_RECIPIENTS=admin@smartcity.local
